<div class="container login-container section">
        <div class="card">
            <div class="card-content center-align">
                <h3><i class="fas fa-user-plus"></i> Register</h3>
                <div class="section">
                  {{> _messages}}
                  <form action="/users/register" method="POST" class="col s12 ">
                  <div class="row">
        
                      <div class="input-field col s12 m6 offset-m3">
                        <i class="fas fa-user prefix"></i>
                        <input name="firstName" id="firstName" type="text" class="validate" value="{{typeOf firstName}}">
                        <label for="firstName">First name</label>
                        
                      </div>
                    </div>
                    <div class="row">
        
                      <div class="input-field col s12 m6 offset-m3">
                        <i class="fas fa-user prefix"></i>
                        <input name="lastName" id="lastName" type="text" class="validate" value="{{typeOf lastName}}">
                        <label for="lastName">Last name</label>
                      </div>
                    </div>
                   <div class="row">
        
                      <div class="input-field col s12 m6 offset-m3">
                        <i class="fas fa-envelope prefix"></i>
                        <input name="email" id="email" type="email" class="validate" value="{{typeOf email}}">
                        <label for="email">Email</label>
                        {{!-- <span class="helper-text" data-error="Please enter a valid email address"></span> --}}
                      </div>
                    </div>
                    <div class="row">
                      <div class="input-field col s12 m6 offset-m3 ">
                        <i class="fas fa-lock prefix"></i>
                        <input name="password" id="password" type="password" class="validate" >
                        <label for="password">Password</label>
                      </div>
                    </div>
                    <div class="row">
                      <div class="input-field col s12 m6 offset-m3 ">
                        <i class="fas fa-lock prefix"></i>
                        <input name="password2" id="password2" type="password" class="validate">
                        <label for="password2">Confirm password</label>
                      </div>
                    </div>
                     <button class="btn waves-effect waves-light" type="submit" name="action">Sign Up
                        <i class="fas fa-sign-in-alt"></i>
                    </button>
                    
                    </form>
                    <div class="section">
                      <p class="lead">Have An Account? <a href="/users/login">Login</a></p>
                    </div>
                    
                </div>
            </div>
        </div>
</div>  