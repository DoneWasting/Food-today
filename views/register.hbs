<div class="hero-register">
  <div class="container login-container section">
        <div class="card hero-card">
            <div class="card-content center-align">
                <h3><i class="icon-green-primary fas fa-user-plus"></i> Regístrate</h3>
                <div class="section">
                  {{> _messages}}
                  <form action="/users/register" method="POST" class="col s12 ">

                   <div class="row">
        
                      <div class="input-field col s12 m6 offset-m3">
                        <i class="icon-green-primary fas fa-envelope prefix"></i>
                        <input name="email" id="email" type="email" class="validate" value="{{typeOf email}}">
                        <label for="email">Email</label>
                        {{!-- <span class="helper-text" data-error="Please enter a valid email address"></span> --}}
                      </div>
                    </div>

                  <div class="row">
        
                      <div class="input-field col s12 m6 ">
                        <i class="icon-green-primary fas fa-user prefix"></i>
                        <input name="firstName" id="firstName" type="text" class="validate" value="{{typeOf firstName}}">
                        <label for="firstName">Nombre</label>
                        
                      </div>
                   
        
                      <div class="input-field col s12 m6 ">
                        
                        <input name="lastName" id="lastName" type="text" class="validate" value="{{typeOf lastName}}">
                        <label for="lastName">Apellido</label>
                      </div>
                    </div>
                  
                    <div class="row">
                      <div class="input-field col s12 m6  ">
                        <i class=" icon-green-primary fas fa-lock prefix"></i>
                        <input name="password" id="password" type="password" class="validate" >
                        <label for="password">Contraseña</label>
                      </div>
                   
                    
                      <div class="input-field col s12 m6  ">
                        
                        <input name="password2" id="password2" type="password" class="validate">
                        <label for="password2">Confirmar contraseña</label>
                      </div>
                    </div>
                     <button class="button-test waves-effect waves-light" type="submit" name="action">Regístrate
                        <i class="fas fa-sign-in-alt"></i>
                    </button>
                    
                    </form>
                    <div class="section">
                      <p class="lead">Tienes Cuenta? <a href="/users/login"> Inicia Sesión</a></p>
                    </div>
                    
                </div>
            </div>
        </div>
</div>  
</div>
