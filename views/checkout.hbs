<div class="section">
    <a href="/search" id="link-backMarkets"><i class="fa fa-arrow-left" aria-hidden="true"></i>  Back to Search</a>
</div>
<h3 class="center-align">Price Comparison</h3>
{{#each comparisonArray}}
<div class="section">
<h4 class="green-text center-align">{{market}}</h4>
<table class="striped">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Precio Bs</th>
            <th>Precio $</th>
        </tr>
    </thead>
    <tbody>
        {{#each matchedProducts}}
            <tr>
               <td>{{name}}</td>
               <td>{{priceBs}} Bs</td>
               <td>{{priceDolar}} $</td>
            </tr>
        {{/each}}
        <tr>
            <th>Total:</th>
            <th>{{totalPriceBs}} Bs</th>
            <th>{{totalPriceDolar}} $</th>
        </tr>
    </tbody>
</table>
<div class="divider"></div>
<div class="center-align section">
    <button class="waves-effect waves-light btn blue darken-3">View Location</button>
</div>

</div>
{{/each}}